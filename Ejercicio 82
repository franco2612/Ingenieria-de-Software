using System;

namespace ejercicio_82_is
{
    class Program
    {
        static void Main(string[] args)
        {
            char letra;
            Console.WriteLine("Ingrese una vocal:");
            letra = Convert.ToChar(Console.ReadLine());
            switch(letra)
            {
                case'a':
                        Console.WriteLine("Es una vocal.");
                    break;
                case'e':
                        Console.WriteLine("Es una vocal.");
                    break;
                case'i':
                        Console.WriteLine("Es una vocal.");
                    break;
                case'o':
                        Console.WriteLine("Es una vocal.");
                    break;
                case'u':
                        Console.WriteLine("Es una vocal.");
                    break;
                default: Console.WriteLine("No se ha ingresado una vocal.");
                    break;
             }
        }         
    }
}
